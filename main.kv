<NoteInput>:
    orientation: "vertical"
    spacing: "10dp"
    size_hint_y: None
    height: self.minimum_height

    MDTextField:
        id: title_input
        hint_text: "Заголовок"
        mode: "rectangle"

    MDTextField:
        id: content_input
        hint_text: "Содержание"
        multiline: True
        mode: "rectangle"

MDScreen:
    MDTopAppBar:
        title: "Заметки"
        pos_hint: {"top": 1}
        elevation: 4
        right_action_items: [["plus", lambda x: app.show_add_note_dialog()]]

    MDTextField:
        id: search_input
        hint_text: "Поиск по заголовку"
        mode: "rectangle"
        size_hint_x: 0.95
        pos_hint: {"center_x": 0.5}
        on_text: app.search_notes(self.text)

    MDScrollView:
        pos_hint: {"top": 0.9}
        MDList:
            id: note_list
